{
  "Window": {
    "Id": "AdvancedStorageWindow",
    "Size": [400, 500],
    "Center": true,
    "Components": [
      {
        "Type": "Header",
        "Text": "{Block.Name}"
      },
      {
        "Type": "ScrollContainer",
        "Id": "InventoryScroll",
        "Position": [10, 50],
        "Size": [300, 400],
        "Content": {
          "Type": "ItemGrid",
          "Id": "MainGridUI",
          "Source": "Block.MainGrid",
          "Columns": 9,
          "SlotSpacing": 2
        }
      },
      {
        "Type": "Panel",
        "Id": "UpgradeSidebar",
        "Position": [320, 50],
        "Size": [60, 400],
        "Background": "ui_panel_dark",
        "Components": [
          {
            "Type": "Label",
            "Text": "Upgrades",
            "FontSize": 12,
            "Dock": "Top",
            "Alignment": "Center"
          },
          {
            "Type": "ItemGrid",
            "Id": "UpgradeSlots",
            "Source": "Block.UpgradeInventory",
            "Columns": 1,
            "MaxSlots": "{Block.Tags.UpgradeSlots}",
            "Margin": [0, 20, 0, 0]
          },
          {
            "Type": "Label",
            "Text": "Energy: {Block.Tags.CurrentEnergy}/{Block.Tags.UpgradeEnergyMax}",
            "Color": "#FFFFFF",
            "FontSize": 10,
            "Dock": "Bottom",
            "Visible": "{Block.Tags.EnergyStatus != 'OVERLOAD'}"
          },
          {
            "Type": "Label",
            "Text": "OVERLOAD: {Block.Tags.CurrentEnergy}/{Block.Tags.UpgradeEnergyMax}",
            "Color": "#FF0000",
            "FontSize": 10,
            "Dock": "Bottom",
            "Visible": "{Block.Tags.EnergyStatus == 'OVERLOAD'}"
          }
        ]
      }
    ]
  }
}